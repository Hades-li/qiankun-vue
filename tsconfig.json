{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": false,
    "baseUrl": ".",
    "declaration": true,
//    "declarationDir": "types",
    "types": [
      "webpack-env",
      "mocha",
      "chai"
    ],
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
      "scriptHost"
    ]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "example/**/*.ts",
    "example/**/*.tsx",
    "example/**/*.vue"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "microApps",
    "types",
    "README.md",
    "README_EN.md"
  ]
}
